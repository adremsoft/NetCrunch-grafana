{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "env": {
       "es6" : true,
       "browser": true,
       "commonjs": true
  },
  "rules": {
    "linebreak-style": 0,
    "max-len": [1, 120, 2, { "ignoreComments": true }],
    "space-before-function-paren": ["error", "never"],
    "comma-dangle": ["error", "never"],
    "padded-blocks": 0,
    "no-param-reassign" : 0,
    "import/prefer-default-export": 0,
    "no-shadow" : ["error" ],
    "one-var": ["error", {
      "var": "always",
      "let": "always",
      "const": "always"
    }]
  }
}
